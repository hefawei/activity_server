<div class="panel panel-default" style="margin-left: 180px; margin-right: 180px">
  <div class="panel-heading ">
    活动信息
    <button>
      <%= link_to ' 同步展示', synchronous_bidding_infos_path(:user_name=>session[:user_name],
                              :activity_name =>params[:activity_name],:status=>params[:status])%>
    </button>
  </div>
  <table class="table">
    <tr>
      <td>编号</td>
      <td>活动名称</td>
      <td>报名人数</td>
      <td>竞价次数</td>
    </tr>
    <% @activity.each do |activity|%>
        <tr>
          <td> <%= @count +=1 %></td>
          <td>
            <%=link_to activity.name,show_bid_list_view_path(:activity_name=>activity.name),
                       :style=>"color: #1E90FF" %>
          </td>
          <td>
            <%= link_to activity.sign_up_number,show_activity_sign_up_view_path(:activity_name=>activity.name),
                        :style => "color: #1E90FF"  %>
          </td>
          <td>
            <%= link_to activity.bid_number,show_bid_list_view_path(:activity_name=>activity.name),
                        :style => "color: #1E90FF" %>
          </td>
        </tr>
    <%end%>
  </table>
</div>
<div align="center">
  <%= will_paginate @activity, :previous_label => '上一页', :next_label=>'下一页'  %>
</div>